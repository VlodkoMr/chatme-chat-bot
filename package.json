{
  "name": "chatme-chat-bot",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc-watch --onSuccess \"npm run start\"",
    "test": "npm run test:unit && npm run test:integration",
    "start": "env $(cat .env.local) nodemon dist/index.js --watch dist",
    "dev:start": "env $(cat .env.testnet) pm2 start dist/index.js --name chatme-dev-bot --update-env",
    "prod:start": "env $(cat .env.production) pm2 start dist/index.js --name chatme-prod-bot --update-env"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "near-cli": "^3.4.2",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@nearfoundation/near-js-encryption-box": "^0.1.2",
    "@urql/core": "^3.1.1",
    "axios": "^1.2.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "near-api-js": "^1.1.0",
    "node-cron": "^3.0.2",
    "node-json-db": "^2.1.3",
    "openai": "^3.1.0"
  }
}
